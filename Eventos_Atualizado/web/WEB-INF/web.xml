<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <listener>
        <description>ServletContextListener, ServletContextAttributeListener, HttpSessionListener, HttpSessionAttributeListener</description>
        <listener-class>prototipo_2.Contador_Listeners</listener-class>
    </listener>
    <filter>
        <filter-name>Filter_1</filter-name>
        <filter-class>prototipo_2.Filter_1</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Filter_1</filter-name>
        <url-pattern>/Sair.jsp</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>Filter_1</filter-name>
        <url-pattern>/Menu_Prototipo.jsp</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>Filter_1</filter-name>
        <url-pattern>/Welcome.jsp</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <servlet>
        <servlet-name>Control_Sessao_Prototipo</servlet-name>
        <servlet-class>prototipo_2.Control_Sessao_Prototipo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Menu_Prototipo</servlet-name>
        <servlet-class>Menu_Prototipo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Redireciona_Sessao_Prototipo</servlet-name>
        <servlet-class>Redireciona_Sessao_Prototipo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>erro</servlet-name>
        <servlet-class>erro</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>erro2</servlet-name>
        <servlet-class>erro2</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Control_Sessao_Prototipo</servlet-name>
        <url-pattern>/Control_Sessao_Prototipo</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>Menu_Prototipo</servlet-name>
        <url-pattern>/Menu_Prototipo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Redireciona_Sessao_Prototipo</servlet-name>
        <url-pattern>/Redireciona_Sessao_Prototipo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>erro</servlet-name>
        <url-pattern>/erro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>erro2</servlet-name>
        <url-pattern>/erro2</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            1
        </session-timeout>
    </session-config>
    <welcome-file-list>
            <welcome-file>Control_Sessao_Prototipo</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>404</error-code>
        <location>/erro2.jsp</location>
    </error-page>
    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/erro.jsp</location>
    </error-page>
</web-app>
